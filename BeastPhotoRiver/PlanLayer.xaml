                IsTopmostOnActivation="False"
                ShowsActivationEffects="False"
                >
                <StackPanel>
                    <Label FontSize="60">Not Yet. Sorry :/</Label>
                    <s:SurfaceButton >OK</s:SurfaceButton>
                </StackPanel>
